<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.djsg38.locationprivacyapp.MainActivity"
    tools:showIn="@layout/activity_main">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/kValue"
        android:text="1"
        android:textAlignment="center"
        android:layout_above="@+id/latView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/listApps"
        android:layout_alignStart="@+id/kMessage" />

    <Button
        android:text="Activate Mock Locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activateMock"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/kMessage"
        android:layout_alignStart="@+id/current_location_map_container" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/current_location_map_container"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_below="@+id/latView">

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longView"
        android:layout_alignBaseline="@+id/latView"
        android:layout_alignBottom="@+id/latView"
        android:layout_toEndOf="@+id/activateMock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/latView"
        android:elevation="0dp"
        android:layout_below="@+id/activateMock"
        android:layout_toStartOf="@+id/longView"
        android:layout_marginEnd="58dp" />

    <TextView
        android:text="Current k-value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kMessage"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/preferenceList"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Preference List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preferenceList"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/listApps"
        android:layout_alignStart="@+id/activateMock" />

    <Button
        android:text="Mobility Trace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mob_trace_button"
        android:layout_below="@+id/listApps"
        android:layout_alignStart="@+id/preferenceList" />

    <Button
        android:text="List Running Applications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listApps"
        android:layout_alignParentTop="true" />


</RelativeLayout>
